
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-auto col-10 col-md-8 col-lg-6">
    <div class="container">
        <form>
            <h2>Login Here</h2>
            <div class="form-group">
                <label for="txtName" class="control-label col-lg">User Name</label>
                <div class="col-lg">
                    <input type="text" name="txtName" class="form-control" />
                    <span class="text-danger">Name Required</span>
                </div>
            </div>
            <div class="form-group">
                <label for="txtpassword" class="control-label col-lg">Password</label>
                <div class="col-lg">
                    <input type="password" name="txtpassword" class="form-control" />
                    <span class="text-danger">Password InValid</span>
                </div>
            </div>
            <div class="form-group">
                <label for="txtconformepassword" class="control-label col-lg">ConformePassword</label>
                <div class="col-lg">
                    <input type="password" name="txtconformepassword" class="form-control" />
                    <span class="text-danger">ConformePassword Required</span>
                </div>
            </div>
            <div class="form-group col-lg">
                <button class="btn btn-lg btn-block btn-primary">Login </button>
            </div>
        </form>
    </div>
</div>
